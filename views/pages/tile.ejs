<body class="detail-body">
  <div class="detail-container">
    <%- include('../layout/header') %>
  <h1 class="detail-title detail-section"><%= movie.title %> (<%= movie.release_date %>)</h1>
<div class="detail-image-container detail-section">
  <img src="<%= movie.poster %>" class="detail-image">
</div>
<div class="detail-rating detail-section">
  Rating: 73%
</div>
<div class="detail-overview"><%= movie.overview %>
</div>
<div class="detail-add detail-section">
  <form action="/detail" method="POST">
    <input type="hidden" name="title" value="<%= movie.title %>">
    <input type="hidden" name="poster" value="<%= movie.poster %>">
    <input type="hidden" name="vote_average" value="<%= movie.vote_average %>">
    <input type="hidden" name="release_date" value="<%= movie.release_date %>">
    <input type="hidden" name="username" required  value="<%= movie.username %>">
    <input type="submit" class="detail-add-button" value="Delete From Watchlist">
  </form>
</div>
